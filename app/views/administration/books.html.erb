<br>
<% content_for :title do %>
  <%= "Challfie - Manage Books" %> 
<% end %>
<% content_for :left_content do %>
  <%= render 'home/left_content' %>
<% end %>
<div class="administration_pages">
  <h3>Manage Books</h3> 
  <%= link_to 'Add New Book', new_book_path, class: 'btn btn-primary' %>
  <br><br>

  <table class="table table-hover">
    <thead>
      <tr>
          <th></th>
          <th>Name</th>
          <th>Required Points</th>
          <th>Level</th>
          <th>Nb of Challenges</th>
          
          <th class='text-center'>Edit</th>
          <th class='text-center'>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><div style='width: 50px; height: 50px;'><%= image_tag book.cover.url(:medium), :style => 'width: auto; height: 100%;' %></div></td>
          <td><%= book.name %></td>
          <td><%= book.required_points %></td>
          <td><%= book.level %></td>
          <td><%= book.challenges.count %></td>
          <td class='text-center'><%= link_to 'Edit', edit_book_path(book), class: 'btn'%></td>
          <td class='text-center'><%= link_to 'Delete', book_path(book), class: 'btn', method: 'delete', data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
  <center><%= will_paginate @books %></center>
</div>  