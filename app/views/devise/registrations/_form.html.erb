<div class="form-group <% if f.object.errors['username'].present? %>error<% end %>">
  <%= f.label :username, "#{t 'sign_in.username'}", class: 'col-sm-3 control-label required' %>
  <div class="col-sm-6">
    <%= f.text_field :username, placeholder: 'Username', class: 'form-control', style:' margin-bottom:3px;', :"data-toggle"=>"tooltip", :"data-placement"=>"top", :title=> "#{t 'sign_in.error_username_format'}" %>
    <span class="text-info" style="margin-top: 5px;"><span class="glyphicon glyphicon-warning-sign"></span> <%= t 'profile.username_info_html' %></span>
  </div>
  <div class="col-sm-3">  
    <span class="help-inline"><%= display_error(f.object, 'username') %></span>
  </div>
</div>

<div class="form-group <% if f.object.errors['firstname'].present? %>error<% end %>">
  <%= f.label :firstname, "#{t 'sign_in.firstname'}", class: 'col-sm-3 control-label required' %>
  <div class="col-sm-6">
    <%= f.text_field :firstname, :autofocus => true, placeholder: 'Firstname', class: 'form-control' %>
