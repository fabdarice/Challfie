<div class="form-group <% if f.object.errors['email'].present? %>error<% end %>">
  <%= f.label :email, class: 'col-sm-3 control-label required' %>
  <div class="col-sm-6">
    <% if source == 'devise' %>
      <%= f.email_field :email, placeholder: 'Email', class: 'form-control', disabled: false %>
    <% else %>
      <%= f.email_field :email, placeholder: 'Email', class: 'form-control', disabled: true %>
    <% end %>
    
  </div>
  <div class="col-sm-3" style="padding-top: 7px;">  
    <span class="help-inline"><%= display_error(f.object, 'email') %></span>
  </div>
</div>

<% if source == 'devise' %>
