<div class="control-group">
  <%= f.label :description, class: 'control-label' %>
  <div class="controls">
    <%= f.text_area :description, class: 'input' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :point, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :point, class: 'input' %>
  </div>
</div>

<div class="control-group">
	<%= f.label :book, class: 'control-label' %>
	<div class="controls">
		<%= f.collection_select(:book_id, Book.all, :id, :name) %>
	</div>
</div>

<div class="control-group">	
	<div class="controls">
		<%= f.collection_check_boxes  :category_ids, Category.all, :id, :name do |b| %>   
		<%= b.label(:"data-value" => b.value) { b.check_box + b.text } %>
		<% end %>
	</div>
	
</div>