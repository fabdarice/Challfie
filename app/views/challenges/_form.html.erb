<div class="control-group">
  <%= f.label :description, class: 'control-label' %>
  <div class="controls">
    <%= f.text_area :description, class: 'input' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :point, class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :point, class: 'input' %>
  </div>
</div>

<div class="control-group">
	<%= f.label :book, class: 'control-label' %>
	<div class="controls">
		<%= f.collection_select(:book_id, Book.all, :id, :name) %>
	</div>
</div>

<div class="control-group">
	
	<%= f.fields_for :category_challenges do |category| %>
	<div class="controls">
		<%= collection_check_boxes :category_challenge, :category_ids, Category.all, :id, :name %>
	</div>
	<% end %>
</div>